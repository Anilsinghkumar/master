pipeline{
    agent any
    stages{
        stage('git checkout'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: '9a45c966-7b10-4fc4-a328-5a26f8411b77', url: 'https://github.com/Anilsinghkumar/master']]])
            }
        }
        stage('Dependency check'){
            echo 'checking the vulnerability'
        }
        stage('Code Build'){
            echo 'Jenkins is Building'
        }
        stage('Sonar scan'){
            echo 'Sonar analysis'
        }
        stage('Build and push'){
            echo 'Building and pushing image to Jfrog'
        }
        stage('Deployment to K8s'){
            echo 'Deploying the image to K8s cluster'
        }
    }
}  
